html, body
  height 100%

body 
  margin 0
  padding 0
  width 100%
  height 100%
  background-color transparent

.navbar-inverse .navbar-brand
  color #fff

.twitter
  display inline-block
  margin-top 19px

.github-ribbon
  position fixed
  top 0
  right 0
  border 0
  z-index 9999

.wrapper
  min-height 100%
  height auto !important
  height 100%
  margin 0 auto -60px
  padding 60px 0 100px

.callout
  margin 20px 0
  padding 15px 30px 15px 15px
  border-left 5px solid #eee
  background-color #FFE7E7
  border-color #C2211D
  text-align left

.callout h4
  margin-top 0

.callout p:last-child
  margin-bottom 0

#footer
  height 60px
  background-color #f5f5f5
  position fixed
  bottom 0
  left 0
  width 100%  
  .container
    width auto
    max-width 680px
    padding 0 15px
  .container .credit
    margin 20px 0

@media (max-width: 767px)
  .github-ribbon
    display none
    position absolute
  #footer
    margin-left -20px
    margin-right -20px
    padding-left 20px
    padding-right 20px